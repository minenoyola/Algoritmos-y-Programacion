//Suma de los números pares entre 2 y 100
Algoritmo D04
	
	Definir Suma, Num Como Entero;
	Suma <- 2;
	Num <- 4;
	Mientras Num <= 100 Hacer
		Suma <- Suma + Num
		Num <- Num + 2
	FinMientras
	escribir "La suma de los números pares entre 2 y 100 es: " Suma

FinAlgoritmo
